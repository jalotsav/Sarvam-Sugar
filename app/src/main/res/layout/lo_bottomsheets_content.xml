<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnrlyot_bottomsheets_filterby"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_5jdp"
    android:padding="@dimen/_5jdp"
    app:behavior_peekHeight="50dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/lnrlyot_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16jdp"
        android:layout_marginRight="@dimen/_16jdp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!--Title & Cancel/Save button-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Filters"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/black" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/apcmptbtn_btmshts_cntnt_savefilter"
                style="@style/AppCompatButton.Red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Save" />
        </RelativeLayout>
        <!--END Title & Cancel/Save button-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16jdp"
            android:text="Select filter by"
            android:textColor="@color/gray72"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnr_btmshts_cntnt_filterby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5jdp"
            android:entries="@array/arry_filterby_outstanding" />

        <!--From & To Date-->
        <LinearLayout
            android:id="@+id/lnrlyot_btmshts_cntnt_fromtodate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16jdp"
            android:layout_marginTop="@dimen/_16jdp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--From Date-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select from date"
                    android:textColor="@color/gray72"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/lnrlyot_btmshts_cntnt_fromdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:background="@drawable/drawbl_round_bgteal_brdrgray800"
                    android:orientation="vertical"
                    android:padding="@dimen/_25jdp">

                    <ImageView
                        android:id="@+id/imgvw_btmshts_cntnt_fromdt"
                        android:layout_width="@dimen/_45jdp"
                        android:layout_height="@dimen/_45jdp"
                        android:contentDescription="@string/imgcd_image"
                        android:textColor="@color/white"
                        app:ico_color="@color/white"
                        app:ico_icon="cmd-calendar-today"
                        app:ico_size="45dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_btmshts_cntnt_slctdfromdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:text="23/07/2016"
                    android:textColor="@color/colorPrimaryDarkGreen"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--END From Date-->

            <!--To Date-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25jdp"
                android:layout_marginStart="@dimen/_25jdp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select to date"
                    android:textColor="@color/gray72"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/lnrlyot_btmshts_cntnt_todt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:background="@drawable/drawbl_round_bgblue_brdrgray800"
                    android:orientation="vertical"
                    android:padding="@dimen/_25jdp">

                    <ImageView
                        android:id="@+id/imgvw_btmshts_cntnt_todt"
                        android:layout_width="@dimen/_45jdp"
                        android:layout_height="@dimen/_45jdp"
                        android:contentDescription="@string/imgcd_image"
                        android:textColor="@color/white"
                        app:ico_color="@color/white"
                        app:ico_icon="cmd-calendar"
                        app:ico_size="45dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_btmshts_cntnt_slctdtodt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:text="27/07/2016"
                    android:textColor="@color/colorPrimaryDarkGreen"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--END To Date-->
        </LinearLayout>
        <!--END From & To Date-->

        <LinearLayout
            android:id="@+id/lnrlyot_btmshts_cntnt_slctdfilterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16jdp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select from list"
                android:textColor="@color/gray72"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/apcmptautocmplttv_btmshts_cntnt_slctdfilterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_35jdp"
                android:ems="10" />

            <Spinner
                android:id="@+id/spnr_btmshts_cntnt_slctdfilterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5jdp"
                android:entries="@array/arry_temp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>