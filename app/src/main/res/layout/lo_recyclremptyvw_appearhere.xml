<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnrlyot_recyclremptyvw_appearhere"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/_16jdp"
    android:layout_marginLeft="@dimen/_16jdp"
    android:layout_marginRight="@dimen/_16jdp"
    android:layout_marginStart="@dimen/_16jdp"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="Missingprefix">

    <ImageView
        app:ico_color="@color/grayA8"
        app:ico_icon="cmd-format-list-bulleted-type"
        app:ico_size="@dimen/_80jdp"
        android:layout_width="@dimen/_80jdp"
        android:layout_height="@dimen/_80jdp"
        android:layout_gravity="center"
        android:contentDescription="@string/imgcd_image" />

    <TextView
        android:id="@+id/tv_recyclremptyvw_appearhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5jdp"
        android:gravity="center"
        android:text="@string/godownwisestck_appear_here"
        android:textColor="@color/gray800"
        android:textSize="@dimen/_20jdp" />
</LinearLayout>