<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5jdp"
    android:layout_marginLeft="@dimen/_8jdp"
    android:layout_marginRight="@dimen/_8jdp"
    android:layout_marginTop="@dimen/_5jdp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    tools:ignore="Missingprefix">

    <RelativeLayout
        android:id="@+id/rltvlyot_recylrvw_outstndng_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10jdp"
        android:paddingTop="@dimen/_10jdp">

        <TextView
            android:id="@+id/tv_recylrvw_outstndng_firstchr"
            android:layout_width="@dimen/_40jdp"
            android:layout_height="@dimen/_40jdp"
            android:layout_margin="@dimen/_8jdp"
            android:background="@drawable/round_drwbl"
            android:gravity="center"
            android:padding="@dimen/_5jdp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_18jdp"
            android:visibility="gone"
            tools:text="b" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_recylrvw_outstndng_firstchr"
            android:layout_toRightOf="@id/tv_recylrvw_outstndng_firstchr"
            android:orientation="vertical">

            <!--Collapse content-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lnrlyot_outstndng_arrow"
                    android:layout_width="@dimen/_30jdp"
                    android:layout_height="@dimen/_30jdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="@dimen/_5jdp">

                    <ImageView
                        android:id="@+id/imgvw_outstndng_arrow"
                        android:layout_width="@dimen/_15jdp"
                        android:layout_height="@dimen/_15jdp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:contentDescription="@string/imgcd_image"
                        app:ico_color="@color/grayA8"
                        app:ico_icon="gmd-keyboard-arrow-down"
                        app:ico_size="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8jdp"
                    android:layout_marginStart="@dimen/_8jdp"
                    android:layout_toLeftOf="@id/lnrlyot_outstndng_arrow"
                    android:layout_toStartOf="@id/lnrlyot_outstndng_arrow"
                    android:orientation="vertical">

                    <!--Party Name-->
                    <TextView
                        android:id="@+id/tv_recylrvw_outstndng_partyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="BARDOLI mk." />

                    <!--Mobile & Phone-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5jdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!--Mobile-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_coln"
                                android:textColor="@color/gray72"
                                android:textSize="@dimen/_12jdp" />

                            <TextView
                                android:id="@+id/tv_recylrvw_outstndng_mobiles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_3jdp"
                                android:layout_marginLeft="@dimen/_5jdp"
                                android:layout_marginRight="@dimen/_3jdp"
                                android:layout_marginStart="@dimen/_5jdp"
                                android:gravity="end"
                                android:textColor="@color/colorPrimaryTeal"
                                android:textSize="@dimen/_12jdp"
                                android:textStyle="bold"
                                tools:text="9662675372" />
                        </LinearLayout>
                        <!--END Mobile-->

                        <!--Phone-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2jdp"
                            android:layout_marginStart="@dimen/_2jdp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_coln"
                                android:textColor="@color/gray72"
                                android:textSize="@dimen/_12jdp" />

                            <TextView
                                android:id="@+id/tv_recylrvw_outstndng_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5jdp"
                                android:layout_marginStart="@dimen/_5jdp"
                                android:gravity="end"
                                android:textColor="@color/colorPrimaryTeal"
                                android:textSize="@dimen/_12jdp"
                                android:textStyle="bold"
                                tools:text="9662675372" />
                        </LinearLayout>
                        <!--END Phone-->
                    </LinearLayout>
                    <!--END Mobile & Phone-->

                    <!--Dalal-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5jdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dalal_coln"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_dalal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="JD Patel" />
                    </LinearLayout>
                    <!--END Dalal-->

                    <!--Outstanding Amount-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5jdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/outstanding_amt_coln"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_amntoutstndng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:textColor="@color/colorPrimaryDeepOrange"
                            android:textSize="@dimen/_14jdp"
                            tools:text="8275"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <!--END Outstanding Amount-->
                </LinearLayout>

            </RelativeLayout>
            <!--END Collapse content-->

            <!--Expand Content-->
            <LinearLayout
                android:id="@+id/lnrlyot_outstndng_expandvw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_35jdp"
                android:layout_marginLeft="@dimen/_8jdp"
                android:layout_marginRight="@dimen/_35jdp"
                android:layout_marginStart="@dimen/_8jdp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1jdp"
                    android:layout_marginBottom="@dimen/_5jdp"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:background="@color/grayA8" />

                <!--Amount & Received Amnt-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--Amount-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_amt_coln"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_3jdp"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginRight="@dimen/_3jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="0.00" />
                    </LinearLayout>
                    <!--END CR Limit-->

                    <!--Received Amnt-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2jdp"
                        android:layout_marginStart="@dimen/_2jdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rec_amt_coln"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_amntrcvd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="6.00" />
                    </LinearLayout>
                    <!--END Received Amnt-->
                </LinearLayout>
                <!--END Amount & Received Amnt-->

                <!--InvNo. & Days-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--InvNo.-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/invno_coln"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_invno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_3jdp"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginRight="@dimen/_3jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="16S/007451" />
                    </LinearLayout>
                    <!--END InvNo.-->

                    <!--Days-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2jdp"
                        android:layout_marginStart="@dimen/_2jdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/days_coln"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="7" />
                    </LinearLayout>
                    <!--END Days-->
                </LinearLayout>
                <!--END InvNo. & Days-->

                <!--Date & DueDate-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--Date-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_sml"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_3jdp"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginRight="@dimen/_3jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="13-09-2016" />
                    </LinearLayout>
                    <!--END Date-->

                    <!--DueDate-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2jdp"
                        android:layout_marginStart="@dimen/_2jdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/duedate_coln"
                            android:textColor="@color/gray72"
                            android:textSize="@dimen/_12jdp" />

                        <TextView
                            android:id="@+id/tv_recylrvw_outstndng_duedate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5jdp"
                            android:layout_marginStart="@dimen/_5jdp"
                            android:gravity="end"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12jdp"
                            tools:text="13-09-2016" />
                    </LinearLayout>
                    <!--END DueDate-->
                </LinearLayout>
                <!--END Date & DueDate-->
            </LinearLayout>
            <!--END Expand content-->
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>