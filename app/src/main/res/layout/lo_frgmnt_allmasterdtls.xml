<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cordntrlyot_allmasterdtls_stock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".navgtndrawer.FrgmntGodownwiseStock"
    tools:ignore="Missingprefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lnrlyot_allmasterdtls_filtersvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_25jdp"
            android:paddingLeft="@dimen/_16jdp"
            android:paddingRight="@dimen/_16jdp"
            android:visibility="gone">

            <!--Title & Cancel button-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/filters_sml"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_20jdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_10jdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgvw_allmasterdtls_fltrremove"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/imgcd_image"
                        app:ico_color="@color/white"
                        app:ico_icon="cmd-filter-remove"
                        app:ico_size="24dp" />

                    <ImageView
                        android:id="@+id/imgvw_allmasterdtls_fltrclose"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10jdp"
                        android:layout_marginStart="@dimen/_10jdp"
                        android:contentDescription="@string/imgcd_image"
                        app:ico_color="@color/white"
                        app:ico_icon="cmd-close"
                        app:ico_size="20dp" />
                </LinearLayout>
            </RelativeLayout>
            <!--END Title & Cancel button-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16jdp"
                android:text="Select filter by"
                android:textColor="@color/gray72"
                android:textSize="18sp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spnr_allmasterdtls_filterby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5jdp"
                android:entries="@array/arry_filterby_allmasterdtls" />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/apcmptautocmplttv_allmasterdtls_slctdfilterval"
                style="@style/AppCompatEdittext.Pink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5jdp"
                android:ems="10"
                android:hint="@string/slct_from_list_sml"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <com.jalotsav.sarvamsugar.common.RecyclerViewEmptySupport
            android:id="@+id/rcyclrvw_allmasterdtls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lnrlyot_allmasterdtls_filtersvw"
            tools:listitem="@layout/lo_recyclritem_allmasterdtls" />

        <include
            layout="@layout/lo_recyclremptyvw_appearhere"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lnrlyot_allmasterdtls_filtersvw" />

        <ProgressBar
            android:id="@+id/prgrsbr_allmasterdtls_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <!--Filters FAB-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_allmasterdtls_filters"
        style="@style/AppCompatButton.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/_16jdp"
        android:clickable="true"
        android:visibility="visible" />

    <!--Filter Apply FAB-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_allmasterdtls_apply"
        style="@style/AppCompatButton.GreenSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        app:layout_anchor="@id/lnrlyot_allmasterdtls_filtersvw"
        app:layout_anchorGravity="right|end|bottom"
        app:useCompatPadding="true" />
</android.support.design.widget.CoordinatorLayout>