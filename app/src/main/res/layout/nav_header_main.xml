<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180jdp"
    android:background="@drawable/img_bg_navgndrwr_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackTrsprnt80"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_16jdp"
        android:paddingLeft="@dimen/_16jdp"
        android:paddingRight="@dimen/_16jdp"
        android:paddingTop="@dimen/_16jdp"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_50jdp"
            android:layout_height="@dimen/_50jdp"
            android:src="@drawable/ic_account_circle"
            android:contentDescription="@string/imgcd_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_16jdp"
            android:text="Jagdish Patel"
            android:textSize="@dimen/_18jdp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16jdp"
            android:textColor="@color/white"
            android:text="JSP" />
    </LinearLayout>
</RelativeLayout>
